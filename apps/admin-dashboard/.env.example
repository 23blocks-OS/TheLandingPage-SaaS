# Admin Dashboard Environment Variables

# Application
NEXT_PUBLIC_APP_NAME="23Blocks Admin"
NEXT_PUBLIC_APP_URL="http://localhost:3001"

# Database (shared with deployment platform)
DATABASE_URL="postgresql://user:password@localhost:5432/deployment_platform"

# NextAuth
NEXTAUTH_SECRET="your-nextauth-secret-generate-with-openssl-rand-base64-32"
NEXTAUTH_URL="http://localhost:3001"

# Admin Credentials (initial admin user)
ADMIN_EMAIL="admin@23blocks.net"
ADMIN_PASSWORD="change-this-secure-password"

# AWS Configuration (same as deployment platform)
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your-access-key-id"
AWS_SECRET_ACCESS_KEY="your-secret-access-key"
S3_DEPLOYMENTS_BUCKET="your-deployments-bucket"
S3_UPLOADS_BUCKET="your-uploads-bucket"
CLOUDFRONT_DISTRIBUTION_ID="your-distribution-id"

# Platform API (to communicate with main platform)
PLATFORM_API_URL="http://localhost:3000"
PLATFORM_API_KEY="shared-secret-key-between-admin-and-platform"

# Feature Flags
ENABLE_USER_SUSPENSION="true"
ENABLE_DEPLOYMENT_DELETION="true"
ENABLE_MANUAL_JOBS="true"

# Monitoring
ENABLE_METRICS="true"
METRICS_RETENTION_DAYS="90"

# Security
SESSION_TIMEOUT_MINUTES="60"
MAX_LOGIN_ATTEMPTS="5"
LOCKOUT_DURATION_MINUTES="30"
